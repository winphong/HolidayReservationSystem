<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="HolidayReservationSystemLibraryPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>entity.EmployeeEntity</class>
    <class>entity.GuestEntity</class>
    <class>entity.PartnerEntity</class>
    <class>entity.ReservationEntity</class>
    <class>entity.RoomEntity</class>
    <class>entity.RoomRateEntity</class>
    <class>entity.RoomTypeEntity</class>
    <class>entity.ReservationLineItemEntity</class>
    <class>entity.WalkinReservationEntity</class>
    <class>entity.OnlineReservationEntity</class>
    <class>entity.PartnerReservationEntity</class>
    <class>entity.PublishedRateEntity</class>
    <class>entity.NormalRateEntity</class>
    <class>entity.PeakRateEntity</class>
    <class>entity.PromotionRateEntity</class>
    <class>entity.RoomRatePerNightEntity</class>
    <class>entity.CustomerEntity</class>
    <class>entity.EmployeeReservationEntity</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/holidayreservationsystem?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="idontknow"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
